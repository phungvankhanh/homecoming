<%= csrf_meta_tags %>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<!------ Include the above in your HEAD tag ---------->
<div class="container">
	<div class="col-md-9">
		<div class="card">
			<div class="card-body">
				<div class="row">
					<div class="col-md-12">
						<h4 class="heading"><strong>Destination </strong> Add <span></span></h4>
						<hr>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
					<%= form_for @destination do |f| %>	
						<div class="form-group row">
							<%= f.label :name,  "Destination Name", class: "col-4 col-form-label" %>
							<div class="col-8">
							<%= f.text_field :name, class: "form-control here", required: true, placeholder: "Destination name" %>
							</div>
						</div>
						<div class="form-group row">
						<%= f.label :address, "Address", class: "col-4 col-form-label" %>
						<div class="col-8">
						<%= f.text_field :address, class: "form-control here", required: true, placeholder: "Address" %><br />
						</div>
						</div>

						<div class="form-group row">
						<%= f.label :speciality, "Speciality", class: "col-4 col-form-label" %>
						<div class="col-8">
						<%= f.text_field :speciality, class: "form-control here", required: true, placeholder: "Describe it" %><br />
						</div>
						</div>

						<div class="form-group row">
						<%= f.label :picture_path, "Picture", class: "col-4 col-form-label" %>
						<div class="col-8">
							<img src="#" class="avatar img-circle img-thumbnail" alt="avatar" style="display :none;width :700px">
							<h6>Upload a different photo...</h6>
							<%= f.file_field :picture_path, class: "text-center center-block file-upload", id: "picture_path", required: true %>
						</div>
					</div>
					<div class="form-group row">
					<div class="offset-4 col-8">
						<%= f.submit "Add new Destination", class: "btn btn-primary" %>
					</div>
				</div>

						
					  
						
					  <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>

</div>
<style>
	body {
		background: #F1F3FA;
	}

	.heading {
		border-bottom: 1px solid #A9A59F;
		padding-bottom: 9px;
		position: relative;
	}

	.heading span {
		background: #6D6C6A none repeat scroll 0 0;
		bottom: -2px;
		height: 3px;
		left: 0;
		position: absolute;
		width: 75px;
	}
</style>
<script src="../assets/image_upload.js"></script>